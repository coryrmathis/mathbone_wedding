<div>Num Attendees: <%=RSVP.where(regrets: true).pluck(:num_people).inject(0){|sum,x| sum + x }%></div>
<div>Num Floating: <%=RSVP.where(float_trip: true).count%></div>
<div>Num Share Room: <%=RSVP.where(share_room: true).count%></div>
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <td>#</td>
      <td>Name</td>
      <td>Num People</td>
      <td>Email</td>
      <td>Float Trip</td>
      <td>Share Room</td>
      <td>Coming?</td>
      <td>Notes</td>

    </tr>
  </thead>
  <%@rsvps.each_with_index do |rsvp, i|%>
    <tr>
      <td><%=i + 1%></td>
      <td><%=rsvp.name%></td>
      <td><%=rsvp.num_people%></td>
      <td><%=rsvp.email%></td>
      <td><%=rsvp.float_trip%></td>
      <td><%=rsvp.share_room%></td>
      <td><%=rsvp.regrets%></td>
      <td><%=rsvp.notes%></td>
    </tr>
  <%end%>
</table>
